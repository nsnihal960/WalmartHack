<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/relativeLayout"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.nsriva1.myapplication.ShoppingPage"
    android:background="#ffffff">




    <GridView android:id="@+id/gridView1"
        android:paddingTop="45dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:columnWidth="160dp"
        android:gravity="center"
        android:numColumns="auto_fit"
        android:stretchMode="columnWidth"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp"
        android:layout_alignParentEnd="true"
        android:background="#ffffff">
    </GridView>

    <Button
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="Cart(0)"
        android:id="@+id/button"
        android:gravity="center_vertical"
        android:layout_gravity="center"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:textSize="20dp"
        style="@style/AppTheme"
        android:background="#4555af"
        android:theme="@style/AppTheme"
        android:onClick="onAddCartClick"
        android:layout_alignTop="@+id/gridView1"
        android:layout_alignStart="@+id/gridView1" />

    <Button
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Checkout"
        android:id="@+id/button2"
        android:gravity="center_vertical"
        android:textSize="20dp"
        style="@style/AppTheme"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:background="#4555af"
        android:theme="@style/AppTheme"
        android:layout_alignTop="@+id/gridView1"
        android:layout_alignEnd="@+id/gridView1"
        android:onClick="onCheckout" />



</RelativeLayout>
